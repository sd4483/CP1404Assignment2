BoxLayout:

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Button:
            id: required_book_button
            text: "List Required"
            on_release: app.select_required_books()
        Button:
            id: completed_book_button
            text: "List Completed"
            on_release: app.select_completed_books()
        Label:
            id: add_book_button
            text: "Add new book"
        Label:
            text: "Book Title:"
        TextInput:
            id: text_title
            value: ''
            size_hint_y: None
            height: '48dp'
            multiline: False
            write_tab: False
        Label:
            text: "Book Author:"
        TextInput:
            id: text_author
            value: ''
            size_hint_y: None
            height: '48dp'
            multiline: False
            write_tab: False
        Label:
            text: "Book Pages"
        TextInput:
            id: text_pages
            value: ''
            size_hint_y: None
            height: '48dp'
            multiline: False
            write_tab: False
        Button:
            text: "Add Book"
            on_release: app.add_books(text_title.text,text_author.text,text_pages.text)
        Button:
            text: "Clear"
            on_release: app.clear_text()

    BoxLayout:
        orientation: "vertical"
        Label:
            id: book_pages
            size_hint_y: 0.1
            text: ""
#
        BoxLayout:
            id: box
            orientation: 'vertical'
        Label:
            id: description
            size_hint_y: 0.1
            text: ""
